pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build and Deploy') {
            steps {
                script {
                   '''
                    & docker-compose -t build .
                    '''
                    
                    '''
                    & docker-compose up -d
                    '''
                }
            }
        }
    }
}
