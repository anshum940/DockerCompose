pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build and Deploy') {
            steps {
                script {
                   '''
                    & "C:\Program Files\Docker\Docker\resources\bin\docker-compose.exe" build
                    '''
                    
                    '''
                    & "C:\Program Files\Docker\Docker\resources\bin\docker-compose.exe" up -d
                    '''
                }
            }
        }
    }
}
