pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your Git repository
                checkout scm
            }
        }
        
        stage('Build and Deploy') {
            steps {
                script {
                    // Build Docker images and start containers using docker-compose
                  sh  'docker-compose up --build'
                }
            }
        }
    }
}
